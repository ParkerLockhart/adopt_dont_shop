<%= form_with url: "/applications", method: :post, local: true do |f| %>
  <%= f.label "Name:" %><br>
  <%= f.text_field :name %><br>
  <%= f.label "Street Address:" %><br>
  <%= f.text_field :street_address %><br>
  <%= f.label "City:" %><br>
  <%= f.text_field :city %><br>
  <%= f.label "State:" %><br>
  <%= f.text_field :state %><br>
  <%= f.label "Zip Code:" %><br>
  <%= f.text_field :zip_code %><br>
  <%= f.hidden_field :description, value: "description" %>
  <%= f.hidden_field :status, value: "In Progress" %>
  <%= f.submit "Submit" %><br>
<% end %>
