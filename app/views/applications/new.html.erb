<%= form_with url: "/applications", method: :post, local: true do |f| %>
  <%= f.label "Name:" %><br>
  <%= f.text_field :name %>
  <%= f.label "Street Address:" %>
  <%= f.text_field :street_address %>
  <%= f.label "City:" %>
  <%= f.text_field :city %>
  <%= f.label "State:" %>
  <%= f.text_field :state %>
  <%= f.label "Zip Code:" %>
  <%= f.text_field :zip_code %>
  <%= f.hidden_field :description, value: "description" %>
  <%= f.hidden_field :status, value: "In Progress" %>
  <%= f.submit "Submit" %>
<% end %>
